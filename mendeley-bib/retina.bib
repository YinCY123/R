file = {:C$\backslash$:/Users/YinCY/Documents/Mendeley Desktop/Reiner et al/Progress in Retinal and Eye Research/Reiner et al. - 2018 - Neural control of choroidal blood flow.pdf:pdf},
issn = {18731635},
journal = {Progress in Retinal and Eye Research},
keywords = {Choroidal blood flow,Ciliary ganglion,Ocular blood flow,Parasympathetic,Pterygopalatine ganglion,Superior cervical ganglion,Sympathetic,Uvea},
number = {November 2017},
pages = {96--130},
title = {{Neural control of choroidal blood flow}},
