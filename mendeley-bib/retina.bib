issn = {21936528},
journal = {Ophthalmology and Therapy},
keywords = {Choriocapillaris,Drusen,Ellipsoid zone,OCTA},
number = {1},
pages = {101--107},
publisher = {Springer Healthcare},
title = {{Choriocapillaris Vascular Density Changes in Patients with Drusen: Cross-Sectional Study Based on Optical Coherence Tomography Angiography Findings}},
