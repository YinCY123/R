issn = {14220067},
journal = {International Journal of Molecular Sciences},
keywords = {Age-related macular degeneration,Epithelial-to-mesenchymal transition,Hypoxia,Nuclear factor erythroid 2-related factor,Oxidative stress,Reactive oxygen species,Retinal pigment epithelium},
number = {22},
pages = {1--35},
pmid = {31752195},
title = {{The regulation of NFE2L2 (NRF2) signalling and epithelial-to-mesenchymal transition in age-related macular degeneration pathology}},
volume = {20},
year = {2019}
}
@article{Lin1995,
