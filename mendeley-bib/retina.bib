ctivation.},
author = {Liao, Yi and Zhang, Houjian and He, Danxue and Wang, Yan and Cai, Binxiang and Chen, Jingmeng and Ma, Jianxing and Liu, Zuguo and Wu, Yalin},
doi = {10.1167/iovs.18-26360},
file = {:C$\backslash$:/Users/YinCY/Documents/Mendeley Desktop/Liao et al/Investigative Ophthalmology and Visual Science/Liao et al. - 2019 - Retinal pigment epithelium cell death is associated with NLRP3 inflammasome activation by all-trans retinal.pdf:pdf},
issn = {15525783},
journal = {Investigative Ophthalmology and Visual Science},
keywords = {NLR family pyrin domain containing 3,NLRP3,RPE,all-trans retinal,atRAL,retinal pigment epithelium,visual (retinoid) cycle},
number = {8},
pages = {3034--3045},
title = {{Retinal pigment epithelium cell death is associated with NLRP3 inflammasome activation by all-trans retinal}},
